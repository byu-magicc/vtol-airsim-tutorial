       \cleardoubleevenpage
    \fi
    % Reset the parskip
    \setlength{\parskip}{0\baselineskip}
  \fi

  % Turn on the BYU formatting stuff for the main document
  \byubaselinestretch{1.5}
  \pagenumbering{arabic}
}
